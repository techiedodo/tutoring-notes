<%= form_for @student do |s| %>
<% if @student.errors.any? %>
<div class="alert alert-danger">
  <h4>There are
    <%= pluralize(@student.errors.count, "error") %>.</h4>
  <ul>
    <% @student.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= s.label :name %>
  <%= s.text_field :name, class: 'form-control', placeholder: 'John Doe' %>
</div>
<div class="form-group">
  <%= s.label :bio, "Student Biography" %>
  <%= s.text_area :bio, row: 5, class: 'form-control', placeholder: 'Biography/Notes'%>
</div>

<%= s.submit "Save", class: 'btn btn-success btn-sm' %>
<%= link_to "Cancel", students_path %>
<% end %>
