<h1><%= @sess.student.name %></h1>
<div class="btn-group">
  <%= link_to "Tutoring Sessions", student_path(@sess.student), class: "btn btn-primary btn-xs", type: "button" %>
</div>
<hr>
<ul class="list-group">
  <% @notes.each do |note| %>
  <h4 class="list-group-item-heading"><%= note.sess_date %>
    |
    <%= note.t_start %>
    -
    <%= note.t_finish %><%= link_to "Edit", note_path(note), class: "pull-right"%></h4>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Summary Statement</h4><hr>
    <p class="list-group-item-text"><%= note.summary %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">What We've Acheived</h4>
    <hr>
    <p class="list-group-item-text"><%= note.achievement %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">What Comes Next</h4><hr>
    <p class="list-group-item-text"><%= note.next_sess %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Recommendations</h4><hr>
    <p class="list-group-item-text"><%= note.recommendation %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Trip Distance</h4><hr>
    <p class="list-group-item-text"><%= note.trip_dist %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Tutoring Rate</h4><hr>
    <p class="list-group-item-text"><%= note.rate %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Additional Rate Increase</h4><hr>
    <p class="list-group-item-text"><%= note.add_rate %></p>
  </li>
  <li class="list-group-item">
    <h4 class="list-group-item-heading">Session Total</h4><hr>
    <p class="list-group-item-text"><%= (note.t_finish - note.t_start)/3600*note.rate %></p>
  </li>
  <br>
  <% end %>
</ul>
<%= params.inspect %>
